Lab04 A Grade

#include<stdio.h>
#include<math.h>

int main(void){
        int i;
        int x;
        int fact;

        for(i = 1; i <= 12; i++){
                printf("%2d", i);


                if(i == 1){
                        fact = 1;
                }

                else{
                        fact = i;


                for(x = i - 1; x >= 1; x--){
                        fact *= x;
                        }
                }
                printf("%10d\n", fact);
        }
        return 0;
}
