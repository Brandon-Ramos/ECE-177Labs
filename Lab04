Lab04 B Grade

#include <stdio.h>
#include <string.h>

int main() {    // Code to compute the date of Easter --- MAKE MINIMAL CHANGES!

        char A, B, C, D, E, F, G, H, I, K, L, M, N, P;  // These work as char
        int year, month, day;
        int startyear, endyear;
        int earliestDay = 32;
        int earliestMonth = 5;
        int latestDay = 0;
        int latestMonth = 0;
        char *earliestMonthString = " ";
        char *latestMonthString = " ";
        char *monthstring;                              // A string to hold the month name

        printf("Enter the start year: ");
        scanf("%d", &startyear);
        printf("Enter the end year: ");
        scanf("%d", &endyear);
        printf("\n");

        if ((startyear >= 1700) && (startyear < 1800)){ /* For the heck of it   */
                printf("startyear is in 1700s!\n");     /* flag startyear in the 1700s  */
        }

        if ((startyear >= 1800) && (startyear < 1900)){         /* also startyear in the 1800s */
                printf("startyear is in 1800s!\n\n");   /* using different test expression */
        }

        if (startyear == 2000){                 // and also startyear equal to 2000
                printf("startyear");                    // printf broken into multiple lines
                printf("starts in 2000!\n");            // (leave it as two lines)
        }

        for (year = startyear; year <= endyear; year++) {
                A = year % 19;
                B = year / 100;
                C = year % 100;
                D = B / 4;
                E = B % 4;
                F = (B + 8) / 25;
                G = (B - F + 1) / 3;
                H = (19 * A + B - D - G + 15) % 30;
                I = C / 4;
                K = C % 4;
                L = (32 + 2 * E + 2 * I - H - K) % 7;
                M = (A + 11 * H + 22 * L) / 451;
                N = (H + L - 7 * M + 114) / 31;
                P = (H + L - 7 * M + 114) % 31;

                month = N;                              // (March = 3, April = 4)
                day = P + 1;

                printf("Date of Easter in %d is %s %d\n", year, month==3?"March":"April", day);

                if (month == 3) {
                        monthstring = "March";
                }
                else {                                          /* else part of if statement */
                        monthstring = "April";
                }
                printf("Date of Easter in %d is %s %d\n\n", year, monthstring, day);

                if(month < earliestMonth){
                        earliestMonth = month;
                        earliestMonthString = monthstring;
                        earliestDay = day;
                }
                else if(month == earliestMonth){
                        if(day < earliestDay){
                                earliestDay = day;
                        }
                }
                if(month > latestMonth){
                        latestMonth = month;;
                        latestMonthString = monthstring;
                        latestDay = day;
                }
                else if(month == latestMonth){
                        if(day > latestDay){
                                latestDay = day;
                        }
                }
        }
        printf("Earliest Easter is %s %d and the latest Easter is %s %d\n\n", earliestMonthString, earliestDay, latestMonthString, 
        latestDay);
        return 0;
}

