Problem2c.c

#include <stdio.h>
int main() {
        unsigned char uc;

        uc = 45;
        printf("%d\t%d\t%u\n", uc, (short)uc, (unsigned short)uc);
        uc = 150;
        printf("%d\t%d\t%u\n", uc, (short)uc, (unsigned short)uc);
        uc = -150;
        printf("%d\t%d\t%u\n", uc, (short)uc, (unsigned short)uc);
        uc = 300;
        printf("%d\t%d\t%u\n", uc, (short)uc, (unsigned short)uc);
        uc = -1;
        printf("%d\t%d\t%u\n", uc, (short)uc, (unsigned short)uc);
        uc = 65535;
        printf("%d\t%d\t%u\n", uc, (short)uc, (unsigned short)uc);

        return 0;
}

