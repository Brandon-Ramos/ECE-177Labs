Problem3.c

#include<stdio.h>

int main(){

        int year;
        printf("Enter the year: ");
        scanf("%d", &year);

        int A = year % 19;
        int B = year / 100;
        int C = year % 100;
        int D = B / 4;
        int E = B % 4;
        int F = (B + 8) / 25;
        int G = (B - F + 1) / 3;
        int H = (19 * A + B - D - G + 15) % 30;
        int I = C / 4;
        int K = C % 4;
        int L = (32 + 2 * E + 2 * I - H - K) % 7;
        int M = (A + 11 * H + 22 * L) / 451;
        int N = (H + L - 7 * M + 114) / 31;
        int P = (H + L - 7 * M + 114) % 31;

        int month = N;
        int day = ++P;

        printf("Date of Easter in %d is %d/%d\n", year, month, day);

        return 0;
}
