cgrade.c

#include<stdio.h>

int main(){
int hours;
int minutes;
int seconds;
int value;
int i;

while(1){
        printf("Enter hours, minutes, seconds: ");
        scanf("%d %d %d", &hours, &minutes, &seconds);

        if(hours == 0 && minutes == 0 && seconds == 0){
                break;
        }
        value = hours;
        for(i = 1; i <= 3; i++){
                if(i == 2){
                value = minutes;
        }
        else if(i == 3){
                value = seconds;
        }
        if(value >= 0 && value <= 59){
                for(int i = 1; i <= value; i++){
                printf("*");
                }
        }
        else{
                printf("Error %d", value);
        }
                printf("\n");
        }
                printf("\n");
        }
        return 0;
}

