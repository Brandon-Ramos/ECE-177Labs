#include<stdio.h>

int main(void){
        int i, j, k, shape, size, fill;

        while(1){
                printf("Enter shape square (1), triangle (2), zig-zag (3), quit (4): ");
                scanf("%d", &shape);

                if(shape == 4)
                break;

                printf("Enter size: ");
                scanf("%d", &size);
                printf("Enter fill: ");
                scanf("%d", &fill);

                fill = (fill == 1) ? '*' : ' ';

                if(shape == 1){
                        for(i = 1; i <= size; i++){
                                for(j = 1; j <= size; j++){
                                        if(i == size || i == 1 || j == size || j == 1){
                                                printf("*");
                                        }
                                        else{
                                                printf("%c", fill);}
                                        }
                                printf("\n");
                                }
                        }
                if(shape == 2){
                        for(i = 1; i <= size; i++){
                                for(j = 1; j <= i; ++j){
                                        if(i == size || j == 1 || j == i){
                                                printf("*");
                                        }
                                        else{
                                                printf("%c", fill);
                                        }
                                }
                                printf("\n");
                        }
                }
        }
        return 0;
}


